@page "/"

<PageTitle>Forside</PageTitle>

<div class="home-container">
    <div class="hero-section">
        <h1>✂️ Velkommen til Salon Booking System</h1>
        <p class="lead">Moderne bookingsystem til frisører og skønhedssaloner</p>
    </div>

    <AuthorizeView>
        <Authorized>
            <div class="user-welcome">
                <h2>Hej, @context.User.Identity?.Name! 👋</h2>
                <p>Du er logget ind som: <strong>@GetUserRole(context)</strong></p>

                <div class="quick-actions">
                    <AuthorizeView Roles="SYSTEM_ADMIN" Context="adminContext">
                        <Authorized>
                        <div class="action-card">
                            <h3>🔧 Administrator</h3>
                            <p>Administrer saloner og system</p>
                            <a href="/admin/Dashboard" class="btn btn-primary">Gå til Admin Dashboard</a>
                        </div>
                        </Authorized>
                    </AuthorizeView>

                    <AuthorizeView Roles="BUSINESS_OWNER" Context="ownerContext">
                        <Authorized>
                        <div class="action-card">
                            <h3>💼 Min Salon</h3>
                            <p>Administrer din salon og bookinger</p>
                            <a href="/Business/BusinessDashbord" class="btn btn-primary">Gå til Mit Dashboard</a>
                        </div>
                        </Authorized>
                    </AuthorizeView>
                </div>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="features-section">
                <h2>Funktioner</h2>
                <div class="features-grid">
                    <div class="feature-card">
                        <div class="feature-icon">📅</div>
                        <h3>Online Booking</h3>
                        <p>Kunder kan booke online 24/7</p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">✂️</div>
                        <h3>Service Administration</h3>
                        <p>Nem styring af services og priser</p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">📊</div>
                        <h3>Oversigt</h3>
                        <p>Se dagens og kommende bookinger</p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">🔔</div>
                        <h3>Notifikationer</h3>
                        <p>Hold styr på alle aftaler</p>
                    </div>
                </div>
            </div>

            <div class="cta-section">
                <h2>Kom i gang</h2>
                <p>Log ind for at administrere din salon</p>
                <a href="/login" class="btn btn-primary btn-lg">Log ind nu</a>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

@code
 
{


private

string

GetUserRole
(
AuthenticationState
context
)


{


var
role
=
context
.
User
.
FindFirst
(
System
.
Security
.
Claims
.
ClaimTypes
.
Role
)
?.
Value
;


return
role
switch


{


"SYSTEM_ADMIN"

=>

"System Administrator"
,


"BUSINESS_OWNER"

=>

"Salon Ejer"
,

_
=>

"Bruger"


}
;


}

}


